# Environment configuration for Home Assistant MCP Server
# Copy this file to .env and adjust values for your setup

# =============================================================================
# Core Configuration
# =============================================================================

# Path to your Home Assistant configuration directory
# Examples:
#   - For Docker HA: /home/user/docker/homeassistant/config
#   - For HAOS: /usr/share/hassio/homeassistant  
#   - For testing: ./test-config
HA_CONFIG_PATH=/path/to/your/homeassistant/config

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: debug, info, warning, error
LOG_LEVEL=info

# =============================================================================
# Backup Configuration  
# =============================================================================

# Create backup before Claude makes changes
BACKUP_BEFORE_CHANGE=true

# Maximum number of backups to keep
MAX_BACKUPS=30

# Use Git for version control
USE_GIT=true

# Backup directory (relative to project root or absolute path)
BACKUP_DIR=./backups

# =============================================================================
# Monitoring Configuration
# =============================================================================

# Monitor check interval in seconds
MONITOR_INTERVAL=60

# =============================================================================
# Update Configuration
# =============================================================================

# Backup before updates
BACKUP_BEFORE_UPDATE=true

# =============================================================================
# Security Configuration
# =============================================================================

# Enable configuration validation before changes
VALIDATE_BEFORE_CHANGE=true

# Strict validation mode (warnings as errors)
STRICT_MODE=false

# =============================================================================
# Development Configuration
# =============================================================================

# Set to 'development' for debugging
NODE_ENV=production

# Enable debug logging for MCP protocol
# MCP_DEBUG=true
